<div class="card m-3 border-success" id="logincard">
  <label class="d-block py-2 px-3 text-white bg-success">Login</label>
  <form id="login-form" class="m-2">
    <div class="form-group">
      <label class="p-2 text-success" for="Username">Username</label>
      <input type="text" class="form-control p-2" id="username" />
    </div>
    <div class="form-group">
      <label class="p-2 text-success">Password</label>
      <input type="password" class="form-control" id="password" />
    </div>
    <button type="submit" class="btn btn-success my-3">Login</button>
    <br />
    <a href="/signup"><label class="px-1 pb-2"><u>Sign Up Instead</u></label></a>
  </form>
</div>
